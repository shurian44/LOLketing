<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageView_title"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="기사 제목"
            android:paddingHorizontal="6dp"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@id/imageView_title"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toTopOf="@id/textView_author"/>

        <TextView
            android:id="@+id/textView_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기자"
            android:paddingHorizontal="6dp"
            android:textSize="15sp"
            card_view:layout_constraintTop_toBottomOf="@id/textView_title"
            card_view:layout_constraintLeft_toLeftOf="@id/textView_title"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 날짜정보"
            android:paddingHorizontal="6dp"
            android:textSize="15sp"
            android:maxLength="10"
            card_view:layout_constraintTop_toBottomOf="@id/textView_title"
            card_view:layout_constraintLeft_toRightOf="@id/textView_author"
            card_view:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>