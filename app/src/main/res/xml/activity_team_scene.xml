<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="2000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/testView"
            motion:touchAnchorSide="top"/>
<!--        <KeyFrameSet>-->
<!--            <KeyAttribute-->
<!--                android:rotation="-45"-->
<!--                android:scaleX="2"-->
<!--                android:scaleY="2"-->
<!--                motion:framePosition="50"-->
<!--                motion:motionTarget="@id/button" />-->
<!--        </KeyFrameSet>-->
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/top_view"
            android:layout_width="0dp"
            android:layout_height="90dp">
        </Constraint>

        <Constraint
            android:id="@id/team_logo_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@id/top_view"
            app:layout_constraintBottom_toBottomOf="@id/top_view"
            app:layout_constraintLeft_toLeftOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/team_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/team_logo_layout"
            motion:layout_constraintRight_toRightOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/team_foundation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/team_name"
            app:layout_constraintBottom_toBottomOf="@id/team_logo_layout"
            app:layout_constraintLeft_toLeftOf="@id/team_name"
            app:layout_constraintLeft_toRightOf="@id/team_logo_layout">
        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/top_view"
            android:layout_width="0dp"
            android:layout_height="60dp">
        </Constraint>

        <Constraint
            android:id="@id/team_logo_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="gone">
        </Constraint>

        <Constraint
            android:id="@+id/team_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@id/team_logo_layout"
            motion:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_view"
            app:layout_constraintBottom_toBottomOf="@id/top_view">
        </Constraint>

        <Constraint
            android:id="@+id/team_foundation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </Constraint>


    </ConstraintSet>

</MotionScene>
